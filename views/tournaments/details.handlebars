<div class="card mb-4">
    <div class="card-header">
        <h2>{{tournament.name}}</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Local:</strong> {{tournament.location}}</p>
                <p><strong>Data:</strong> {{tournament.startDate}} a {{tournament.endDate}}</p>
            </div>
            <div class="col-md-6">
                <p><strong>Rodadas:</strong> {{tournament.rounds}}</p>
                <p><strong>Rodada atual:</strong> {{tournament.currentRound}}</p>
            </div>
        </div>

        <div class="d-flex gap-2 mt-3">
            <a href="/tournaments/pairings/{{tournament.id}}" class="btn btn-primary">Ver Emparceiramentos</a>
            <a href="/tournaments/standings/{{tournament.id}}" class="btn btn-success">Ver Classificação</a>
            {{#if registeredPlayers}}
            <a href="/tournaments/generate-pairings/{{tournament.id}}" class="btn btn-warning">Gerar Próxima Rodada</a>
            {{/if}}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h3>Jogadores Inscritos</h3>
            </div>
            <div class="card-body">
                {{#if registeredPlayers}}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Rating</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each registeredPlayers}}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{rating}}</td>
                                <td>
                                    <a href="/tournaments/remove-player/{{../tournament.id}}/{{id}}"
                                        class="btn btn-sm btn-danger"
                                        onclick="return confirm('Remover este jogador do torneio?');">Remover</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <div class="alert alert-info">Nenhum jogador inscrito neste torneio.</div>
                {{/if}}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h3>Adicionar Jogador</h3>
            </div>
            <div class="card-body">
                {{#if availablePlayers}}
                <form action="/tournaments/add-player" method="POST">
                    <input type="hidden" name="tournamentId" value="{{tournament.id}}">
                    <div class="mb-3">
                        <label for="playerId" class="form-label">Selecione um jogador</label>
                        <select class="form-select" id="playerId" name="playerId" required>
                            <option value="">Selecione...</option>
                            {{#each availablePlayers}}
                            <option value="{{id}}">{{name}} ({{rating}})</option>
                            {{/each}}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success">Adicionar</button>
                </form>
                {{else}}
                <div class="alert alert-info">Não há jogadores disponíveis para adicionar.</div>
                <a href="/players/add" class="btn btn-primary">Cadastrar Novo Jogador</a>
                {{/if}}
            </div>
        </div>
    </div>
</div>