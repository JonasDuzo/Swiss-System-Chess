<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista de Torneios</h2>
    <a href="/tournaments/create" class="btn btn-primary">Novo Torneio</a>
</div>

{{#if tournaments}}
<div class="row">
    {{#each tournaments}}
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">
                    <strong>Local:</strong> {{location}}<br>
                    <strong>Data:</strong> {{startDate}} a {{endDate}}<br>
                    <strong>Rodadas:</strong> {{rounds}}<br>
                    <strong>Rodada atual:</strong> {{currentRound}}
                </p>
            </div>
            <div class="card-footer bg-transparent">
                <div class="d-flex gap-1 flex-wrap">
                    <a href="/tournaments/details/{{id}}" class="btn btn-sm btn-info">Detalhes</a>
                    <a href="/tournaments/pairings/{{id}}" class="btn btn-sm btn-primary">Emparceiramentos</a>
                    <a href="/tournaments/standings/{{id}}" class="btn btn-sm btn-success">Classificação</a>
                    <form action="/tournaments/delete/{{id}}?_method=DELETE" method="POST"
                        onsubmit="return confirm('Tem certeza que deseja excluir este torneio?');">
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="alert alert-info">Nenhum torneio cadastrado.</div>
{{/if}}