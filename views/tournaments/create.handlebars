<div class="card">
    <div class="card-header">
        <h2>Criar Novo Torneio</h2>
    </div>
    <div class="card-body">
        <form action="/tournaments/create" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Nome do Torneio</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Local</label>
                <input type="text" class="form-control" id="location" name="location">
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="startDate" class="form-label">Data de Início</label>
                    <input type="date" class="form-control" id="startDate" name="startDate">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="endDate" class="form-label">Data de Término</label>
                    <input type="date" class="form-control" id="endDate" name="endDate">
                </div>
            </div>
            <div class="mb-3">
                <label for="rounds" class="form-label">Número de Rodadas</label>
                <input type="number" class="form-control" id="rounds" name="rounds" value="5" min="1">
                <small class="text-muted">Valor padrão: 5 rodadas</small>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Criar Torneio</button>
                <a href="/tournaments" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>