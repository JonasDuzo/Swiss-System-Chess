<div class="card mb-4">
    <div class="card-header">
        <h2>Classificação - {{tournament.name}}</h2>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <strong>Rodada atual:</strong> {{tournament.currentRound}} de {{tournament.rounds}}
            </div>
            <div class="d-flex gap-2">
                <a href="/tournaments/details/{{tournament.id}}" class="btn btn-secondary">Voltar</a>
                <a href="/tournaments/pairings/{{tournament.id}}" class="btn btn-primary">Ver Emparceiramentos</a>
            </div>
        </div>

        {{#if standings}}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Pos.</th>
                        <th>Nome</th>
                        <th>Rating</th>
                        <th>Pontos</th>
                        <th>Jogos</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each standings}}
                    <tr>
                        <td>{{position}}</td>
                        <td>{{name}}</td>
                        <td>{{rating}}</td>
                        <td>{{score}}</td>
                        <td>{{gamesPlayed}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="alert alert-info">
            Nenhum resultado registrado ainda. A classificação será atualizada conforme os resultados forem informados.
        </div>
        {{/if}}
    </div>
</div>