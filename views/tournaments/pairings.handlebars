<div class="card mb-4">
    <div class="card-header">
        <h2>Emparceiramentos - {{tournament.name}}</h2>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <strong>Rodada atual:</strong> {{currentRound}} de {{tournament.rounds}}
            </div>
            <div class="d-flex gap-2">
                <a href="/tournaments/details/{{tournament.id}}" class="btn btn-secondary">Voltar</a>
                <a href="/tournaments/standings/{{tournament.id}}" class="btn btn-success">Ver Classificação</a>
            </div>
        </div>

        {{#if pairingsByRound}}
        {{#each pairingsByRound as |roundPairings roundNum|}}
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h3>Rodada {{roundNum}}</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Mesa</th>
                                <th>Brancas</th>
                                <th>Negras</th>
                                <th>Resultado</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each roundPairings}}
                            <tr>
                                <td>{{@index}}</td>
                                <td>{{whiteName}}</td>
                                <td>{{blackName}}</td>
                                <td>
                                    {{#if result}}
                                    {{#if (eq result "1-0")}}
                                    1-0 (Vitória Brancas)
                                    {{else if (eq result "0-1")}}
                                    0-1 (Vitória Negras)
                                    {{else if (eq result "0.5-0.5")}}
                                    ½-½ (Empate)
                                    {{else}}
                                    {{result}}
                                    {{/if}}
                                    {{else}}
                                    Em andamento
                                    {{/if}}
                                </td>
                                <td>
                                    {{#if (eq black "bye")}}
                                    <span class="badge bg-secondary">Bye automático</span>
                                    {{else}}
                                    <form action="/tournaments/update-result" method="POST" class="d-flex gap-2">
                                        <input type="hidden" name="tournamentId" value="{{../../tournament.id}}">
                                        <input type="hidden" name="round" value="{{roundNum}}">
                                        <input type="hidden" name="white" value="{{white}}">
                                        <input type="hidden" name="black" value="{{black}}">
                                        <select class="form-select form-select-sm" name="result" required>
                                            <option value="">Selecione...</option>
                                            <option value="1-0" {{#if (eq result "1-0" )}}selected{{/if}}>1-0 (Vitória
                                                Brancas)</option>
                                            <option value="0-1" {{#if (eq result "0-1" )}}selected{{/if}}>0-1 (Vitória
                                                Negras)</option>
                                            <option value="0.5-0.5" {{#if (eq result "0.5-0.5" )}}selected{{/if}}>½-½
                                                (Empate)</option>
                                        </select>
                                        <button type="submit" class="btn btn-sm btn-primary">Salvar</button>
                                    </form>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="alert alert-info">
            Nenhum emparceiramento gerado ainda.
            {{#if tournament.players}}
            <a href="/tournaments/generate-pairings/{{tournament.id}}" class="alert-link">Gerar primeira rodada</a>
            {{else}}
            Adicione jogadores ao torneio primeiro.
            {{/if}}
        </div>
        {{/if}}
    </div>
</div>